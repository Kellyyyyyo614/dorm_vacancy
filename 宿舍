<!DOCTYPE html>
<html>
<head>
	<title>選單示範</title>
	<meta charset="UTF-8">
  <style>
		select {
			padding: 5px;
			font-size: 16px;
			border-radius: 5px;
		}
		button {
			padding: 10px 20px;
			font-size: 20px;
			border-radius: 5px;
			background-color: #2196F3;
			color: #fff;
			border: none;
			cursor: pointer;
			margin-top: 10px;
		}
		#result {
			font-size: 24px;
			margin-top: 20px;
		}
		.red {
			color: red;
			font-weight: bold;
		}
		.white {
			color: white;
			font-weight: bold;
		}
               h2 {
                       font-size: 16px;
               }

	</style>
</head>
<body>
	<h1>閒置淋浴間查詢</h1>
  <h2>紅字為目前有人使用，黑字為目前閒置中</h2>
	<label for="dormitory-select">宿舍:</label>
	<select id="dormitory-select">
		<option value="">--請選擇--</option>
		<option value="G1">G1</option>
		<option value="G2">G2</option>
		<option value="G3">G3</option>
    <option value="G4">G4</option>
    <option value="G6">G6</option>
    <option value="B3">B3</option>
    <option value="B5">B5</option>
    <option value="B6">B6</option>
    <option value="B7">B7</option>
    <option value="B9A">B9A</option>
    <option value="B9B">B9B</option>
    <option value="B11">B11</option>
    <option value="B12">B12</option>
	</select>
	<label for="floor-select">樓層:</label>
	<select id="floor-select" disabled>
		<option value="">--請選擇宿舍--</option>
	</select>
	<button id="query-btn" disabled>查詢</button>
	<div id="result"></div>

	<script>
		// 定義宿舍與樓層的對應關係
		const floorMapping = {
			'G1': ['1F', '2F', '3F'],
			'G2': ['1F', '2F'],
			'G3': ['1F', '2F', '3F'],
      'G4': ['1F', '2F', '3F', '4F', '5F'],
      'G6': ['1F', '2F', '3F'],
      'B3': ['1F', '2F'],
      'B5': ['1F', '2F', '3F'],
      'B6': ['1F', '2F', '3F'],
      'B7': ['1F', '2F', '3F'],
      'B9A': ['1F', '2F', '3F', '4F', '5F'],
      'B9B': ['1F', '2F', '3F', '4F', '5F'],
      'B11': ['1F', '2F', '3F', '4F', '5F'],
      'B12': ['1F', '2F', '3F', '4F', '5F'],
		};

		// 取得 HTML 中的元素
		const dormitorySelect = document.getElementById('dormitory-select');
		const floorSelect = document.getElementById('floor-select');
		const queryBtn = document.getElementById('query-btn');
		const result = document.getElementById('result');

		// 當宿舍選單改變時，動態生成樓層選單
		dormitorySelect.addEventListener('change', function() {
			const selectedDormitory = dormitorySelect.value;
			if (selectedDormitory) {
				floorSelect.disabled = false;
				floorSelect.innerHTML = '';
				const floors = floorMapping[selectedDormitory];
				floors.forEach(function(floor) {
					const option = document.createElement('option');
					option.value = floor;
					option.innerText = floor;
					floorSelect.appendChild(option);
				});
				queryBtn.disabled = false;
			} else {
				floorSelect.disabled = true;
				floorSelect.innerHTML = '<option value="">--請選擇宿舍--</option>';
				queryBtn.disabled = true;
			}
		});

		// 當查詢按鈕被點擊時，顯示隨機顏色的數字
		queryBtn.addEventListener('click', function() {
			const numbers = [1, 2, 3, 4, 5, 6, 7];
			result.innerHTML = '';
			numbers.forEach(function(number) {
				const span = document.createElement('span');
				span.innerText = number;
				if (Math.random() < 0.5) {
					span.style.color = 'red';
				} else {
					span.style.color = 'black';
				}
				result.appendChild(span);
			});
		});

	</script>
</body>
</html>
